<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".AddExpenseFragment">

    <Spinner
        android:id="@+id/expenseSpinner"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        >

    </Spinner>

    <EditText
        android:id="@+id/expAmountET"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Enter Amount"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:shadowColor="#D8D1D1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/dateShowET"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Enter Expense Date"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/datePickerIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range_black_24dp"
            android:padding="15dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/timeShowET"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Enter Time"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/timePcikerIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_access_time_black_24dp"
            android:padding="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:id="@+id/expenseImageIV"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@drawable/ic_attach_file_black_24dp"
            android:padding="40dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            >
            <Button
                android:id="@+id/gallaryImageBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gallery Image(if any)"
                android:textAllCaps="false"
                android:background="@color/colorPrimaryDark"
                android:textColor="#FFFFFF"
                android:shadowColor="#D3CDCD"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:layout_marginBottom="5dp"
                />
            <Button
                android:id="@+id/cameraImageBTN"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Camera Image(if andy)"
                android:textAllCaps="false"
                android:background="@color/colorPrimaryDark"
                android:textColor="#FFFFFF"
                android:shadowColor="#D3CDCD"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="2"
                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/expeseSaveBTN"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:text="save"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        />


</LinearLayout>